<Window x:Class="TemperatureWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TemperatureWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="505" Width="898">
    <Grid Margin="0,0,-100,-54">
        <DatePicker x:Name="datePicker" HorizontalAlignment="Left" Margin="30,37,0,0" VerticalAlignment="Top"/>
        <Label x:Name="medianTemperatureLabel" Content="Label" HorizontalAlignment="Left" Margin="159,37,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="outdoorRadioButton" Content="RadioButton" HorizontalAlignment="Left" Margin="136,402,0,0" VerticalAlignment="Top" Checked="outdoorRadioButton_Checked"/>
        <RadioButton x:Name="indoorRadioButton" Content="RadioButton" HorizontalAlignment="Left" Margin="10,402,0,0" VerticalAlignment="Top" Checked="indoorRadioButton_Checked"/>

    </Grid>
</Window>
